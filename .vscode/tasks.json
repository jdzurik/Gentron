{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Install Library Packages",
            "type": "npm",
            "script": "install",
            "path": "Gentron.Library/",
            "problemMatcher": []
        },
        {
            "label": "Install UI Packages",
            "type": "npm",
            "script": "install",
            "path": "Gentron.UI/",
            "problemMatcher": []
        },
        {
            "label": "Install Packages",
            "dependsOn": [
                "Install Library Packages",
                "Install UI Packages"
            ],
            "problemMatcher": []
        },
        {
            "label": "Webpack -- Set Environment",
            "type": "shell",
            "command": "cmd",
            "args": ["/c", "SET", "NODE_ENV=development"],
            "problemMatcher": []
        },
        {
            "label": "Webpack -- Dev Server",
            "type": "npm",
            "script": "build",
            "path": "Gentron.UI/",
            "problemMatcher": [],
        },        
        {
            "label": "Webpack -- All",
            "dependsOn": [
                "Webpack -- Set Environment",
                "Webpack -- Dev Server"
            ],
            "problemMatcher": [],
        },
    ]
}
//cmd /c SET NODE_ENV=development&& webpack-dev-server --hot --colors